{% block contenido %}
<center><h2><label class="label label-primary">{{nombre}}</label></h2></center>
<br>
<br>
<div class="row">
	{% for img in imagenes %}
		<div class="col-md-4">
			<div class="thumbnail">
				<img id="{{ img.idimagen }}" src="{{ asset(img.imgimagen) }}" style="width:100%; height:220px;" data-toggle="tooltip" title="{{ img.imgdsc }}" >
			</div>
		</div>
	{% endfor %}
</div>

<br><br>
<div class="row">
	<div class="col-md-offset-3 col-md-2">
		<form role="form" action=" {{ path('insertar_imagen') }} " method="POST">
			<input type="text" name="idHotel" id="idHotel" value="{{idHotel}}" hidden></input>
			<input type="hidden" name="hotelNombre" id="hotelNombre" value="{{nombre}}"></input>
			<button type="submit" class="btn btn-primary btn-block">INSERTAR</button>
		</form>
	</div>
	<div class="col-md-2">
		<button id="eliminacion" type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#myModal">Eliminar</button>
		<div id="myModal" class="modal fade" role="dialog">
			<div class="modal-dialog">
				<div class="modal-content">
  					<div class="modal-header">
    					<button type="button" class="close" data-dismiss="modal">&times;</button>
    					<h4 class="modal-title">Eliminar</h4>
  					</div>
  					<div class="modal-body">
    					<p>¿Est&aacute; seguro de eliminar la/las imagen(es)?</p>
  					</div>
  					<div class="modal-footer">
						<form role="form" action=" {{ path('eliminar_imagenes') }} " method="POST">
							<input type="text" name="info_img" hidden>
							<button type="submit" class="btn btn-default">Aceptar</button>
							<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
							<input type="text" name="idHotel" id="idHotel" value="{{idHotel}}" hidden>
							<input type="hidden" name="hotelNombre" id="hotelNombre" value="{{nombre}}"></input>
						</form>
  					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-2">
		<a href="{{ path('listar_hoteles') }}" class="btn btn-primary btn-block" role="button">VOLVER A HOTELES</a>
	</div>
</div>

{% endblock %}