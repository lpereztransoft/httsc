{% block contenido %}
<div class="row">
	<div class="col-lg-offset-3 col-lg-6">
	<div class="panel panel-primary">

				<div class="panel-heading">
  					<div class="row">
  						<div class="col-lg-1">
  							<span class="glyphicon glyphicon-th-list"></span>
  						</div>
  						<div class="col-lg-11">
  							<strong>Recursos</strong>
  						</div>
  					</div>
  				</div>
  	<div class="panel-body">			
  	{% if listar == 1 %}				
	<table class="table table-bordered" id="recursos">
		<thead>
			<tr>
				<th>Seleccionar</th>
				<th>Recurso</th>
				<th>Descripción</th>
				
			</tr>
		</thead>
		<tbody>
			{% for rec in recursos %}
				<tr>
					<td class="boton"><input type="radio" name="caracteristica"></input></td>
					<td class="numero">{{ rec.idrec }}</td>
					<td class="dsc">{{ rec.recdsc }}</td>
					
				</tr>
    		{% endfor %}

		</tbody>
	</table>
	{% endif %}
	<div class="row">
		{% if (insertar == 1) and (listar == 1)%}
		<div class="col-xs-6 col-md-4">
		<form role="form" action="{{ path('insertar_recursos') }}">
			<button type="submit" class="btn btn-primary btn-block">Insertar</button>
		</form>
		</div>	
	{% else %}
		<div class="col-xs-6 col-md-4 sr-only">
		<form role="form" action="{{ path('insertar_recursos') }}">
			<button type="submit" class="btn btn-primary btn-block sr-only">Insertar</button>
		</form>
		</div>		
	{% endif %}			
	{% if (modificar == 1) and (listar == 1)%}		
	<div class="col-xs-6 col-md-4">
		<form role="form" action="{{ path('modificar_recurso') }}" method="POST">	
		<button type="submit" class="btn btn-primary btn-block">Modificar</button>
		<input type="hidden" name="idRec" id="idRec" />
		<input type="hidden" name="recDsc" id="recDsc" />
		</form>	
	</div>
	{% else %}
	<div class="col-xs-6 col-md-4 sr-only">
		<form role="form" action="{{ path('modificar_recurso') }}" method="POST">		
		<button type="submit" class="btn btn-primary btn-block sr-only">Modificar</button>	
		<input type="hidden" name="idRec" id="idRec" />
		<input type="hidden" name="recDsc" id="recDsc" />
	</form>	
	</div>
	{% endif %}				
	{% if (eliminar == 1) and (listar == 1)%}		
	<div class="col-xs-6 col-md-4">
		<button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#myModal">Eliminar</button>
	</div>	
	{% else %}
	<div class="col-xs-6 col-md-4 sr-only">	
			<button type="button" class="btn btn-primary btn-block sr-only" data-toggle="modal" data-target="#myModal">Eliminar</button>	
	</div>		
	{% endif %}				
		
	</div>	
	</div>	
	</div>	
</div>
  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Eliminar</h4>
        </div>
        <div class="modal-body">
          <p>Esta seguro de eliminar el registro?</p>
        </div>
        <div class="modal-footer">
        	<div class="row">
			<div class="col-xs-6 col-md-4">
        	<form role="form" action="{{ path('eliminar_recurso') }}" method="POST">	
		<button type="submit" class="btn btn-primary btn-block">Aceptar</button>
		<input type="hidden" name="idRecEliminar" id="idRecEliminar" />
		</form>	
		</div>
		<div class="col-xs-6 col-md-4">
          <button type="button" class="btn btn-primary btn-block" data-dismiss="modal">Cancelar</button>
          </div>
          </div>
        </div>
      </div>
      
    </div>
  </div>	
{% endblock %}


