{% block contenido %}
<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<div class="row">
					<div class="col-xs-2 col-md-1">
						<span class="glyphicon glyphicon-list"></span>
					</div>
					<div class="col-xs-10 col-md-11">
						<strong>REGISTRO RESERVA</strong>
					</div>
				</div>
			</div>
			<div class="panel-body">
				<form role="form" action="{{ path('agregar_reserva') }}" method="POST" data-toggle="validator">
					<br>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group has-feedback">
								<label>Desde</label>
			                	<div id="desde" class="input-group date" data-provide="datepicker" >
			                		<div class="input-group-addon">
				                    	<span class="glyphicon glyphicon-calendar"></span>
				                    </div>
				                    <input type='text' class="form-control" name="fecha_ingreso" placeholder="aaaa-mm-dd" autocomplete="off" data-error="Ingrese una fecha con el calendario" required/>
				            	</div>
								<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
								<div class="help-block with-errors"></div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group has-feedback">
								<label>Hasta</label>
                				<div  id="hasta" class='input-group date' data-provide="datepicker">
                					<div class="input-group-addon">
	                       				<span class="glyphicon glyphicon-calendar"></span>
	                       			</div>
	                    			<input type='text' class="form-control" name="fecha_salida" placeholder="aaaa-mm-dd" autocomplete="off" data-error="Ingrese una fecha con el calendario" required/>
	                       		</div>
								<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
								<div class="help-block with-errors"></div>
							</div>
						</div>
					</div><!-- class="row" -->
					<input type="text" name="idhabitacion" value="{{ idhabitacion }}" hidden></input>
					<input type="text" name="nombrehabitacion" value="{{ nombrehabitacion }}" hidden></input>
					<input type="text" name="tipohabitacion" value="{{ tipohabitacion }}" hidden></input>
					<input type="text" name="idHotel" value="{{ idHotel }}" hidden></input>
					
					<div class="row">
						<div class="col-md-offset-3 col-md-3">
							<br>
							<button id="boton" type="submit" class="btn btn-primary btn-block">BLOQUEAR</button>
						</div>
						<div class="col-md-3 sr-only">
							<br>
							<a href="{{ url('listar_reservas') }}" class="btn btn-primary btn-block" role="button">CANCELAR</a>
						</div>
					</div>
				</form>
			</div>			
		</div>
	</div>
</div>
{% endblock %}