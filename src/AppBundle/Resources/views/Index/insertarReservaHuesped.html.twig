{% block contenido %}
<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<div class="row">
					<div class="col-xs-2 col-md-1">
						<span class="glyphicon glyphicon-list"></span>
					</div>
					<div class="col-xs-10 col-md-11">
						<strong>REGISTRO RESERVA</strong>
					</div>
				</div>
			</div>
			<div class="panel-body">
				<form role="form" action="{{ path('agregar_reserva_huesped') }}" method="POST" data-toggle="validator">
					<div class="row">
						<div class="col-md-12">
							<fieldset>
		  						<legend><strong><label class="label label-primary"><i class="fa fa-info-circle"></i></label>&nbsp;&nbsp;Informaci&oacute;n de la Reserva</strong></legend>
		  						<div class="row">
		  							<div class="col-md-6">
										<div class="form-group has-feedback">
											<label for="">Fecha de ingreso: {{fechaEntrada}}</label>
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group has-feedback">
											<label for="">Fecha de salida: {{fechaSalida}}</label>
										</div>
									</div>
		  						</div><!-- class="row" -->
								<div class="row">
									<div class="col-md-6">
										<div class="form-group">
											<label for="tipo">Reserva: {{codigoReserva}}</label>
										</div>
									</div>
									<div class="col-md-1">
										<div class="form-group">
										<label for="">Total: </label>
										</div>
									</div>
									<div class="col-md-3">
										<div class="form-group has-feedback">
										<input id ="tarifa" type="text" class="form-control" name="tarifa" autocomplete="off" maxlength="49" data-error="Campo obligatorio" pattern="^[0-9].{1,9}$" value="{{total}}" required></input>
										<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
										<div class="help-block with-errors"></div>
										</div>
									</div>
								</div><!-- class="row" -->
		  					</fieldset>
						</div>
					</div>
					<br>
					{% for huesped in 0..total_huespedes %}
					<div class="row">
						<div class="col-md-12">
							<fieldset>
		  						<legend><strong><label class="label label-primary"><i class="fa fa-user"></i></label>&nbsp;&nbsp;Datos del Huesped</strong></legend>
		  						<div class="row">
		  							<div class="col-md-6">
		  							<div class="form-group has-feedback">
											<input type="text" id ="nombre{{huesped}}"  class="form-control" name="nombre{{huesped}}" autocomplete="off" maxlength="149" data-error="Campo obligatorio (max. 150 caracteres)" placeholder="Nombre Completo" required></input>
									<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
									<div class="help-block with-errors"></div>
									</div>
		  							</div>
		  							<div class="col-md-6">
		  							<div class="form-group has-feedback">
  									<input id ="email{{huesped}}" type="email" class="form-control" name="email{{huesped}}" autocomplete="off" maxlength="149" pattern = "^[a-zA-Z0-9_\-\.~]{2,}@[a-zA-Z0-9_\-\.~]{2,}\.[a-zA-Z]{2,4}$" placeholder="Email" required></input>
									<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
									<div class="help-block with-errors"></div>
									</div>
								</div>
		  						</div><!-- class="row" -->
	  						<br>
	  						<div class="row">
								<div class="col-md-3">
								<div class="form-group has-feedback">
								<input id ="autocomplete" type="text" class="form-control" name="cedula{{huesped}}" autocomplete="off" maxlength="9" pattern="^[0-9]{6,9}$" data-error="Ingrese solo d&iacute;gitos (min. 6 max. 9)" placeholder="Ci/Id" required></input>
								<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
								<div class="help-block with-errors"></div>
								</div>
								</div>
								<div class="col-md-3">
								<div class="form-group has-feedback">
								<input id ="autocomplete" type="text" class="form-control" name="telefono{{huesped}}" autocomplete="off" maxlength="20" pattern="^[1-9|+]{1}\d{1}[\s|-]?\d{1}[\s|-]?\d{1}[\s|-]?\d{3,}$" data-error="Tel&eacute;fono no v&aacute;lido (max. 20 caracteres)" placeholder="Telefono" required></input>
								<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
								<div class="help-block with-errors"></div>
								</div>
								</div>
								<div class="col-md-6">
	  							<div class="form-group has-feedback">
			                	<div id="nac" class="input-group date nac" data-provide="datepicker" > 
			                		<div class="input-group-addon">
				                    	<span class="glyphicon glyphicon-calendar"></span>
				                    </div>
				                    <input type='text' class="form-control" name="fecha_nac{{huesped}}" placeholder="Fecha de Nacimiento" autocomplete="off" data-error="Ingrese una fecha con el calendario" required/>
				            	</div>
								<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
								<div class="help-block with-errors"></div>
							</div>
								</div>
							</div><!-- class="row" -->
		 					</fieldset>
						</div>
					</div><!-- class="row" -->
					{% endfor %}
					<br>
					
					<input type="text" name="idhabitacion" value="{{ idhabitacion }}" hidden></input>
					<input type="text" name="nombrehabitacion" value="{{ nombrehabitacion }}" hidden></input>
					<input type="text" name="tipohabitacion" value="{{ tipohabitacion }}" hidden></input>
					<input type="text" name="idHotel" value="{{ idHotel }}" hidden></input>
					<input type="text" name="nrohuesped" value="{{total_huespedes}}" hidden></input>
					<input type="text" name="fecha_ingreso" value="{{fechaEntrada}}" hidden></input>
					<input type="text" name="fecha_salida" value="{{fechaSalida}}" hidden></input>
					<input type="text" name="reserva" value="{{codigoReserva}}" hidden></input>
					<div class="row">
						<div class="col-md-offset-3 col-md-3">
							<br>
							<button id="boton" type="submit" class="btn btn-primary btn-block">REGISTRAR</button>
						</div>
						<div class="col-md-3">
							<br>
							<a href="{{ url('buscar_disponibilidad') }}" class="btn btn-primary btn-block" role="button">CANCELAR</a>
						</div>
					</div>
				</form>
