{% block contenido %}

<div class="row">
	<div class="col-md-8">
	</div>	
	
{% if (insertar == 1) and (listar == 1)%}		
	<div class="col-md-1">
		<form role="form" action="{{ path('insertar_usuario') }}">
			<button type="submit" class="btn btn-primary btn-block" title="INSERTAR">
				<i class="fa fa-plus"></i>
			</button>
		</form>
	</div>
{% endif %}
{% if (modificar == 1) and (listar == 1)%}	
	<div class="col-md-1">
		<form role="form" action="{{ path('modificar_usuario') }}" method="POST">
			<input type="hidden" name="idUsu" id="idUsu" />
			<input type="hidden" name="usuNombre" id="usuNombre" />
			<input type="hidden" name="usuEmail" id="usuEmail" />
			<input type="hidden" name="usuEstado" id="usuEstado" />
			<input type="hidden" name="usuCi" id="usuCi" />
			<input type="hidden" name="usuTelefono" id="usuTelefono" />
			<input type="hidden" name="usuNacimiento" id="usuNacimiento" />	
			<button type="submit" class="btn btn-primary btn-block" title="MODIFICAR">
				<i class="fa fa-pencil-square-o"></i>
			</button>			
		</form>	
	</div>	
{% endif %}
{% if (eliminar == 1) and (listar == 1)%}	
	<div class="col-md-1">		
		<button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#myModal" title="ELIMINAR">
			<i class="fa fa-trash"></i>
		</button>
	</div>
	<!-- Modal -->
	<div class="modal fade" id="myModal" role="dialog">
    	<div class="modal-dialog">    
      		<!-- Modal content-->
      		<div class="modal-content">
        		<div class="modal-header">
          			<button type="button" class="close" data-dismiss="modal">&times;</button>
          			<h4 class="modal-title">Eliminar</h4>
        		</div>
        		<div class="modal-body">
          			<p>Esta seguro de eliminar el registro?</p>
        		</div>
        		<div class="modal-footer">
        			<div class="row">
						<div class="col-xs-6 col-md-4">
        					<form role="form" action="{{ path('eliminar_usuario') }}" method="POST">	
								<button type="submit" class="btn btn-primary btn-block">Aceptar</button>
								<input type="hidden" name="idUsuEliminar" id="idUsuEliminar" />
							</form>	
						</div>
						<div class="col-xs-6 col-md-4">
          					<button type="button" class="btn btn-primary btn-block" data-dismiss="modal">Cancelar</button>
          				</div>
          			</div>
        		</div>
      		</div>      
    	</div>
  	</div>
{% endif %}	
</div>

<br><br>
<table class="table table-striped table-separator paginador">
	<thead>
		<tr class="table-thead">
			<th><i class="fa fa-dot-circle-o"></i></th>
			<th class="sr-only">IdUsuario</th>
			<th class="sr-only">UsuarioEstado</th>
			<th>Nombre</th>
			<th>Tel&eacute;fono</th>
			<th class="sr-only">Fecha de Nacimiento</th>
			<th>CI</th>
			<th>Email</th>
			<th>Rol</th>
			<th>Estado</th>
		</tr>
	</thead>
	<tbody>
	{% for usuario in usuarios %}
		<tr>
			<td class="boton"><input type="radio" name="rol"></input></td>
			<td class="numero sr-only">{{ usuario.idusu }}</th>
			<td class="estado sr-only">{{ usuario.usuestado }}</th>
			<td class="nombre">{{ usuario.usunombre }}</td>
			<td class="telefono">{{ usuario.usutelefono }}</td>
			<td class="nacimiento sr-only">{{ usuario.usufechanac }}</td>
			<td class="ci">{{ usuario.usuci }}</td>
			<td class="email">{{ usuario.usuemail}}</td>
			<td class="rol">{{ usuario.usurol}}</td>
			<td>
			{% if usuario.usuestado == 1 %}
				<h5><span class="label label-success">Habilitado</span></h5>
			{% else %}
				<span class="label label-danger">Inhabilitado</span>
			{% endif %}
			</td>
		</tr>
	{% endfor %}
	</tbody>
</table>

{% endblock %}
